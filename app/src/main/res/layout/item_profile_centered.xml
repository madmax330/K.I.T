<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/profileNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profileImageView"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="60dp"
            android:layout_toEndOf="@+id/profileImageView"
            android:maxLines="1"
            android:text="@string/three_dots"
            android:textColor="#333"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profileEmailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profileNameView"
            android:layout_below="@+id/profileNameView"
            android:layout_marginEnd="60dp"
            android:maxLines="1"
            android:text="@string/three_dots"
            android:textSize="11sp" />

    </RelativeLayout>

</RelativeLayout>