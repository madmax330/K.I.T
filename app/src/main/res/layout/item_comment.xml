<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/userNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userImageView"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/userImageView"
        android:text="@string/three_dots"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userNameView"
        android:layout_below="@+id/userNameView"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_corners_comment"
        android:text="@string/six_dots"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/commentTimeView"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/userImageView"
        android:layout_alignStart="@+id/commentTextView"
        android:layout_below="@+id/commentTextView"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="@string/three_dots"
        android:textSize="10sp" />

</RelativeLayout>